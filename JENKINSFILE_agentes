pipeline {
    agent none // ¡IMPORTANTE! Sin agente global.

    stages {
        // ETAPA 1: En el NODO MASTER
        stage('Checkout en Master') {
            agent { label 'master' }
            steps {
                git branch: 'master', url: 'https://github.com/eternalscythe/cp1-unir.git'
                stash name: 'codigo-fuente', includes: '**/*'
                // DIAGNÓSTICO (ENTREGABLE)
                bat 'whoami'
                bat 'hostname'
                bat 'echo Workspace: %WORKSPACE%'
            }
        }

        // ETAPA 2: En tu AGENTE1 (label "agente1")
        stage('Unit Tests en Agente1') {
            agent { label 'agente1' }
            steps {
                unstash 'codigo-fuente'
                bat 'C:\\Python313\\python.exe -m pytest test\\unit -v --junitxml=unit-test-report.xml'
                stash name: 'reporte-unit', includes: 'unit-test-report.xml'
                // DIAGNÓSTICO (ENTREGABLE)
                bat 'whoami'
                bat 'hostname'
            }
        }

        // ETAPA 3: En tu AGENTE2 (label "agente2")
        stage('Integration Tests en Agente2') {
            agent { label 'agente2' }
            steps {
                unstash 'codigo-fuente'
                // Iniciar servicios
                bat 'start /B java -jar wiremock\\wiremock.jar --port 9090 --root-dir wiremock'
                bat 'ping -n 6 127.0.0.1 >nul'
                bat 'start /B C:\\Python313\\python.exe -m flask --app app\\api run --port 5000'
                bat 'ping -n 6 127.0.0.1 >nul'
                // Ejecutar pruebas
                bat 'C:\\Python313\\python.exe -m pytest test\\rest -v --junitxml=rest-test-report.xml'
                stash name: 'reporte-rest', includes: 'rest-test-report.xml'
                // Limpiar servicios en ESTE agente
                bat 'taskkill /F /IM python.exe 2>nul'
                bat 'taskkill /F /IM java.exe 2>nul'
                // DIAGNÓSTICO (ENTREGABLE)
                bat 'whoami'
                bat 'hostname'
            }
        }

        // ETAPA 4: Reportes finales en MASTER
        stage('Reportes Finales en Master') {
            agent { label 'master' }
            steps {
                unstash 'reporte-unit'
                unstash 'reporte-rest'
                junit 'unit-test-report.xml'
                junit 'rest-test-report.xml'
                bat 'whoami'
                bat 'hostname'
            }
        }
    }
}