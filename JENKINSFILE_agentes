pipeline {
    agent none // ¡IMPORTANTE! Sin agente global.

    stages {
        // ETAPA 1: En el NODO MASTER
        stage('Checkout en Master') {
            agent any
            steps {
                git branch: 'master', url: 'https://github.com/eternalscythe/cp1-unir.git'
                stash name: 'codigo-fuente', includes: '**/*'
                // DIAGNÓSTICO (ENTREGABLE)
                bat 'whoami'
                bat 'hostname'
                bat 'echo Workspace: %WORKSPACE%'
            }
        }

        // ETAPA 2: En tu AGENTE1 (label "agente1")
        stage('Unit Tests en Agente1') {
            agent { label 'agente1' }
            steps {
                unstash 'codigo-fuente'
                bat 'C:\\Python313\\python.exe -m pytest test\\unit -v --junitxml=unit-test-report.xml'
                stash name: 'reporte-unit', includes: 'unit-test-report.xml'
                // DIAGNÓSTICO (ENTREGABLE)
                bat 'whoami'
                bat 'hostname'
            }
        }

        // ETAPA 3: En tu AGENTE2 (label "agente2")
       stage('Integration Tests en Agente2') {
    agent { label 'agente2' }
    steps {
        unstash 'codigo-fuente'
        
        // 1. INICIAR WIREMOCK (desvinculado, con título único)
        bat 'start "WIREMOCK_9090" /B java -jar wiremock\\wiremock.jar --port 9090 --root-dir wiremock'
        bat 'ping -n 6 127.0.0.1 >nul'
        
        // 2. INICIAR FLASK (desvinculado, con título único)
        bat 'start "FLASK_5000" /B C:\\Python313\\python.exe -m flask --app app\\api run --port 5000'
        bat 'ping -n 6 127.0.0.1 >nul'
        
// 3. VERIFICAR servicios con PowerShell nativo
powershell 'Test-NetConnection -ComputerName localhost -Port 9090 -InformationLevel Quiet'
powershell 'Test-NetConnection -ComputerName localhost -Port 5000 -InformationLevel Quiet'
        
        // 4. EJECUTAR PRUEBAS
        bat 'C:\\Python313\\python.exe -m pytest test\\rest -v --junitxml=rest-test-report.xml'
        
        // 5. LIMPIAR PROCESOS POR SU TÍTULO (más seguro que por .exe)
        bat 'taskkill /FI "WINDOWTITLE eq WIREMOCK_9090" /F /T 2>nul || echo "Wiremock ya terminado"'
        bat 'taskkill /FI "WINDOWTITLE eq FLASK_5000" /F /T 2>nul || echo "Flask ya terminado"'
        // Limpieza adicional por si acaso
        bat 'taskkill /F /IM python.exe 2>nul || echo "No Python processes"'
        bat 'taskkill /F /IM java.exe 2>nul || echo "No Java processes"'
        
        // 6. Guardar reporte y diagnóstico
        stash name: 'reporte-rest', includes: 'rest-test-report.xml'
        bat 'whoami'
        bat 'hostname'
    }
}

        // ETAPA 4: Reportes finales en MASTER
        stage('Reportes Finales en Master') {
            agent any
            steps {
                unstash 'reporte-unit'
                unstash 'reporte-rest'
                junit 'unit-test-report.xml'
                junit 'rest-test-report.xml'
                bat 'whoami'
                bat 'hostname'
            }
        }
    }
}